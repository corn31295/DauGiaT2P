@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="css/style.css">

</head>
@if (ViewBag.ErrorMsg != null)
{
    <div role="alert">
        <strong style="color:red">Thông Báo!</strong> @ViewBag.ErrorMsg
    </div>
}
<h1>Đăng nhập</h1>
<form class="form-horizontal" method="post" action="" id="frmLogin">
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtUsername" placeholder="Username" name="Username">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Mật khẩu</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="RawPWD">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="remember"> Ghi nhớ
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Đăng nhập</button>
        </div>
    </div>
</form>

