@using PagedList;
@using PagedList.Mvc;
@*@using TEAMT2P.Models
@model List<Product>*@
@model IPagedList<TEAMT2P.Models.Product>

@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Product/Detail.cshtml";
}

@{
    ViewBag.Title = "ByCat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count == 0)
{
    <text> không có sản phẩm ! </text>
}
else
{
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-6">
                <div class="thumbnail">
                    <img src="~/Imgs/sp/@p.ProID/main_thumbs.jpg" title="@p.ProName" />
                    <div class="caption">
                        <h4>@p.ProName</h4>
                        <h4>Giá: @string.Format("{0:N0}", p.Price)</h4>
                        <h4>Tồn: @p.Quantity</h4>
                        <p>@p.TinyDes</p>
                        <p>
                            <a href="@Url.Action("Detail", "Product", new { id = @p.ProID})" class="btn btn-primary" role="button">
                                Chi Tiết
                            </a>
                            <a href="#" class="btn btn-success" role="button">
                                <i class="fa fa-cart-plus"></i>
                                Đặt mua
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="?page=@(ViewBag.CurPage-1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.Pages; i++)
            {
                if (ViewBag.CurPage == i)
                {
                    <li class="active">
                        <a href="?page=@i">@i</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="?page=@i">@i</a>
                    </li>
                }
            }
            @*<li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            <li>*@
                <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>




}
