@using TEAMT2P.Models
@using TEAMT2P.Helpers  

@model List<WLItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
    <text> Không có dữ liệu! </text>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="col-sm-4">Sản phẩm</th>

                        <th class="col-sm-4">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cim in Model) {
                        <tr>
                            <td>@cim.Product.ProName</td>
                            <td>&nbsp;</td>
                            @*<td class="text-right">
                                <a class="btn btn-danger btn-xs" href="javascript:;" role="button" title="Xóa"></a>
                                <i class="fa fa-remove"></i>
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

